<!-- Lucide Icons -->
<style>
  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Shared Styles */
  .navbar {
    margin-top: -30px;
    background-color: #fff;
    border-bottom: 1px solid #eaeaea;
    padding: 1rem;
    font-family: "Segoe UI", sans-serif;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    font-size: 1.25rem;
    font-weight: bold;
    color: #198754;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  /* Nav Links Common */
  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    font-size: 1rem;
    color: #333;
    text-decoration: none;
    padding: 0.6rem 1rem;
    border-radius: 8px;
    transition: all 0.2s ease-in-out;
    position: relative;
  }

  .nav-item i {
    width: 20px;
    height: 20px;
    stroke-width: 1.8;
  }

  /* Active and Hover */
  .nav-item.active {
    background-color: #d1f5e0;
    color: #198754;
    font-weight: 600;
  }

  .nav-item:hover {
    background-color: #f1f3f5;
    color: #0d6efd;
  }

  /* Badge */
  .badge {
    position: absolute;
    top: 4px;
    right: 6px;
    background: #f03e3e;
    color: white;
    border-radius: 50%;
    font-size: 0.75rem;
    padding: 0.15rem 0.45rem;
    font-weight: bold;
  }

  /* === Responsive Layouts === */

  /* Desktop: Topbar */
  @media (min-width: 768px) {
    .navbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-direction: row;
      padding: 1rem 2rem;
    }

    .nav-links {
      flex-direction: row;
      gap: 1rem;
      margin-bottom: 0;
    }

    .nav-item {
      padding: 0.5rem 0.75rem;
    }

    .nav-logo {
      margin-bottom: 0;
    }
  }

  /* Mobile: Sidebar */
  @media (max-width: 767px) {
    .navbar {
      display: flex;
      flex-direction: column;
      height: 100vh;
      width: 100%;
    }
  }
</style>
<link rel="stylesheet" href="https://unpkg.com/lucide@latest" />

<header class="navbar">
  <div class="nav-logo">
    <i data-lucide="package"></i>
    <span>Pickle Palace</span>
  </div>
  <nav class="nav-links">
    <a href="/" class="nav-item active"
      ><i data-lucide="home"></i><span>Home</span></a
    >
    <a href="/all-pickles" class="nav-item"
      ><i data-lucide="box"></i><span>All Pickles</span></a
    >
    <% if(user.userType == "host"){%>
      <a href="/host/add-pickle" class="nav-item"
        ><i data-lucide="plus"></i><span>Add Pickle</span></a
      >
    <%}%>
   <% if(user.userType == "host"){%>
    <a href="/host/host-pickles" class="nav-item"
      ><i data-lucide="box"></i><span>Host Pickles</span></a
    >
    <%}%>

    <a href="/favourites" class="nav-item"
      ><i data-lucide="heart"></i><span>Favourites</span></a
    >
    <a href="/cart" class="nav-item cart-link">
      <i data-lucide="shopping-cart"></i><span>Cart</span>
      <span class="badge">3</span>
    </a>
    <a href="/profile" class="nav-item"
      ><i data-lucide="user"></i><span>Profile</span></a
    >
    <a href="/myorders" class="nav-item"
